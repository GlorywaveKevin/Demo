<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.people">

    <application
        android:name=".Activity.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_people"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_people"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.HomeScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.CityDetailsScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.PlaceDetailsScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.Profile"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.LoginScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity android:name=".Activity.AddPlaceActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.Register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity android:name=".Activity.EditProfile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>

</manifest>